<Window x:Class="ZahlensummeGrenze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zahlensumme bis Grenze" Height="162" Width="183">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,20,0,0" Name="txtLimit" VerticalAlignment="Top" Width="120" TextChanged="LimitEntered" HorizontalContentAlignment="Right" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,50,0,0" Name="txtLastNr" VerticalAlignment="Top" Width="120" IsEnabled="False" HorizontalContentAlignment="Right" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,80,0,0" Name="txtSum" VerticalAlignment="Top" Width="120" IsEnabled="False" HorizontalContentAlignment="Right" />
    </Grid>
</Window>
