<Window x:Class="ArithMittel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arithmetisches Mittel" Height="291" Width="275">
    <Grid>
        <ListBox Height="180" HorizontalAlignment="Left" Margin="20,20,0,0" Name="lstNumbers" VerticalAlignment="Top" Width="80" IsEnabled="False" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,210,0,0" Name="txtInput" VerticalAlignment="Top" Width="80" />
        <Button Content="&lt;" Height="213" HorizontalAlignment="Left" Margin="110,20,0,0" Name="btnAddNumber" VerticalAlignment="Top" Width="30" Click="btnAddNumber_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="160,20,0,0" Name="txtMean" VerticalAlignment="Top" Width="80" IsEnabled="False" />
        <Button Content="Berechnen" Height="23" HorizontalAlignment="Left" Margin="160,60,0,0" Name="btnCalculate" VerticalAlignment="Top" Width="75" Click="btnCalculate_Click" />
        <Button Content="Löschen" Height="23" HorizontalAlignment="Left" Margin="160,100,0,0" Name="btnClear" VerticalAlignment="Top" Width="75" Click="btnClear_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" IsEnabled="False" Margin="161,138,0,0" Name="txtGMean" VerticalAlignment="Top" Width="80" />
    </Grid>
</Window>
