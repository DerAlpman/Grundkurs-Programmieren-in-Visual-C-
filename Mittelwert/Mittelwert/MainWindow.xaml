        <TextBox Height="23" HorizontalAlignment="Left" Margin="140,50,0,0" Name="txtValueB" VerticalAlignment="Top" Width="100" />
        <Button Content="Berechnen" Height="23" HorizontalAlignment="Center" Margin="00,80,0,0" Name="btnCalculate" VerticalAlignment="Top" Width="75" Click="btnCalculate_Click" />
        <Label Content="" Height="28" HorizontalAlignment="Center" Margin="00,110,0,0" Name="lblResult" VerticalAlignment="Top" MinWidth="100" IsEnabled="True" />
