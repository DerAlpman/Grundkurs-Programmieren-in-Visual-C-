<Window x:Class="PotenzreiheSinus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Potenzreihe Sinus-Funktion" Height="350" Width="410">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="90,20,0,0" Name="txtInput" VerticalAlignment="Top" Width="60" HorizontalContentAlignment="Right" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="220,20,0,0" Name="txtOutput" VerticalAlignment="Top" Width="120" IsEnabled="False" HorizontalContentAlignment="Right" />
        <Label Content="Winkel x(°):" Height="28" HorizontalAlignment="Left" Margin="20,20,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="sin(x):" Height="28" HorizontalAlignment="Left" Margin="180,20,0,0" Name="label2" VerticalAlignment="Top" />
        <ListBox Height="240" HorizontalAlignment="Left" Margin="20,60,0,0" Name="lstResult" VerticalAlignment="Top" Width="260" FontFamily="Courier New" FontSize="8" />
        <Button Content="Berechnen" Height="23" HorizontalAlignment="Left" Margin="300,60,0,0" Name="Calculate" VerticalAlignment="Top" Width="75" Click="Calculate_Click" />
    </Grid>
</Window>
