<Window x:Class="DXFKonverterAbstract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DXF-Konverter" Height="350" Width="460" ResizeMode="NoResize">
    <Grid>
        <Label Content="Entities" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="125" HorizontalAlignment="Left" Margin="10,35,0,0" Name="txtEntities" VerticalAlignment="Top" Width="252" IsEnabled="True" />
        <Label Content="DXF" Height="28" HorizontalAlignment="Left" Margin="280,10,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="264" HorizontalAlignment="Left" Margin="280,35,0,0" Name="txtDXF" VerticalAlignment="Top" Width="148" IsEnabled="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsHitTestVisible="True" />
        <TextBox Height="83" HorizontalAlignment="Left" Margin="10,170,0,0" Name="txtErrors" VerticalAlignment="Top" Width="252" IsEnabled="True" IsReadOnly="True" />
        <Button Content="Konvertieren" Height="23" HorizontalAlignment="Left" Margin="10,280,0,0" Name="btnConvert" VerticalAlignment="Top" Width="96" Click="btnConvert_Click" />
    </Grid>
</Window>
