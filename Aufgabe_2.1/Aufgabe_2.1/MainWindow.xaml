        <Label Content="h:" Height="28" HorizontalAlignment="Left" Margin="110,110,0,0" Name="label6" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="50,80,0,0" Name="txtA" VerticalAlignment="Top" Width="50" IsEnabled="False" />
        <TextBox Height="23" HorizontalAlignment="Left" HorizontalContentAlignment="Right" IsEnabled="False" Margin="50,110,0,0" Name="txtB" VerticalAlignment="Top" Width="50" />
        <TextBox Height="23" HorizontalAlignment="Left" HorizontalContentAlignment="Right" IsEnabled="False" Margin="140,110,0,0" Name="txtH" VerticalAlignment="Top" Width="50" />
        <TextBox Height="23" HorizontalAlignment="Left" HorizontalContentAlignment="Right" IsEnabled="False" Margin="140,80,0,0" Name="txtC" VerticalAlignment="Top" Width="50" />
    </Grid>
</Window>
