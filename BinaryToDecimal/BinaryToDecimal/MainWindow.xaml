<Window x:Class="BinaryToDecimal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Binärzahl -> Dezimalzahl" Height="163" Width="360">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,20,0,0" Name="txtBinary" VerticalAlignment="Top" Width="300" HorizontalContentAlignment="Center" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="20,50,0,0" Name="txtDecimal" VerticalAlignment="Top" Width="140" IsReadOnly="True" />
        <Button Content="Konvertieren" Height="23" HorizontalAlignment="Right" Margin="0,50,20,0" Name="btnConvert" VerticalAlignment="Top" Width="75" Click="btnConvert_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" IsReadOnly="True" Margin="20,80,0,0" Name="txtDecimal2" VerticalAlignment="Top" Width="140" />
    </Grid>
</Window>
